{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1",
    "test/(.*)": "<rootDir>/test/$1"
  },
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest",
    "^.+\\.m?js$": "babel-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(p-limit|yocto-queue|@calcom/platform-libraries|@calcom/platform-constants)/)"
  ],
  "setupFiles": ["<rootDir>/test/setEnvVars.ts"]
}
