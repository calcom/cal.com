{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1",
    "test/(.*)": "<rootDir>/test/$1"
  },
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": ["<rootDir>/test/setEnvVars.ts", "jest-date-mock"],
  "reporters": ["default", "jest-summarizing-reporter"],
  "workerIdleMemoryLimit": "512MB",
  "maxWorkers": 2
}
