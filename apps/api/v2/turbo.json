{
  "$schema": "https://turborepo.dev/schema.v2.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "NODE_ENV",
        "API_PORT",
        "DATABASE_READ_URL",
        "DATABASE_WRITE_URL",
        "LOG_LEVEL",
        "NEXTAUTH_SECRET",
        "USE_POOL",
        "LOGGER_BRIDGE_LOG_LEVEL",
        "REDIS_URL",
        "TRIGGER_VERSION"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env.production"]
    }
  }
}
