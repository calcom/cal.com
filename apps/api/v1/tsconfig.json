{
  "extends": "@calcom/tsconfig/nextjs.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@prisma/client/*": ["@calcom/prisma/client/*"],
      "@calcom/testing/*": ["../../../packages/testing/src/*"]
    },
    "experimentalDecorators": true
  },
  "include": [
    "next-env.d.ts",
    "./next.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../../packages/types/*.d.ts",
    "../../../packages/types/next-auth.d.ts",
    "trigger.version.js"
  ],
  "exclude": ["**/node_modules/**", "templates", "auth"]
}
